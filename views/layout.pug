doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  link(rel='shortcut icon' href='#')
  link(rel='stylesheet', href='/stylesheets/style.css')
  script(src='https://unpkg.com/axios/dist/axios.min.js')
  title Hello, world!
body 
  .container
    header.d-flex.flex-wrap.justify-content-center.py-3.mb-4.border-bottom
      a.d-flex.align-items-center.mb-3.mb-md-0.me-md-auto.text-dark.text-decoration-none(href='/')
        svg.bi.me-2(width='40' height='32')
          use(xlink:href='#bootstrap')
        span.fs-4 Simple Pokemon Project
      ul.nav.nav-pills
        li.nav-item
          a.nav-link.active(href='/' aria-current='page') Home
        li.nav-item
          a.nav-link(href='/pokemon/bulbasaur') Bulbasaur
        li.nav-item
          a.nav-link(href='/pokemon/charmander') Charmander
        li.nav-item
          a.nav-link(href='/pokemon/squirtle') Squirtle
        //li.nav-item
          a.nav-link(href='/pokemon/userpick') Pick a Pokemon
  #myCarousel.carousel.slide(data-bs-ride='carousel')
    .carousel-indicators
      button(type='button' data-bs-target='#myCarousel' data-bs-slide-to='0' aria-label='Slide 1')
      button(type='button' data-bs-target='#myCarousel' data-bs-slide-to='1' aria-label='Slide 2')
      button.active(type='button' data-bs-target='#myCarousel' data-bs-slide-to='2' aria-label='Slide 3' aria-current='true')
    .carousel-inner
      .carousel-item
        img.transparent(src='https://img.pokemondb.net/sprites/home/normal/bulbasaur.png' alt='https://img.pokemondb.net/sprites/home/normal/bulbasaur.png')
        .container
          .carousel-caption.text-start
            h1 Example headline.
            p Some representative placeholder content for the first slide of the carousel.
            p
              a.btn.btn-lg.btn-primary(href='/pokemon/bulbasaur' id='bulbaAnchor') Bulbasaur
      .carousel-item
        img.transparent(src='https://img.pokemondb.net/sprites/home/normal/charmander.png' alt='https://img.pokemondb.net/sprites/home/normal/charmander.png')
        //svg.bd-placeholder-img(width='100%' height='100%' xmlns='http://www.w3.org/2000/svg' aria-hidden='true' preserveaspectratio='xMidYMid slice' focusable='false')
          rect(width='100%' height='100%' fill='#777')
        .container
          .carousel-caption
            h1 Another example headline.
            p Some representative placeholder content for the second slide of the carousel.
            p
              a.btn.btn-lg.btn-primary(href='/pokemon/charmander' id='charAnchor') Charmander
      .carousel-item.active
        img.transparent(src='https://img.pokemondb.net/sprites/home/normal/squirtle.png' alt='https://img.pokemondb.net/sprites/home/normal/squirtle.png')
        //svg.bd-placeholder-img(width='100%' height='100%' xmlns='http://www.w3.org/2000/svg' aria-hidden='true' preserveaspectratio='xMidYMid slice' focusable='false')
          rect(width='100%' height='100%' fill='#777')
        .container
          .carousel-caption.text-end
            h1 One more for good measure.
            p Some representative placeholder content for the third slide of this carousel.
            p
              a.btn.btn-lg.btn-primary(href='/pokemon/squirtle' id='squirtAnchor') Squirtle
    button.carousel-control-prev(type='button' data-bs-target='#myCarousel' data-bs-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.visually-hidden Previous
    button.carousel-control-next(type='button' data-bs-target='#myCarousel' data-bs-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.visually-hidden Next
  block content
